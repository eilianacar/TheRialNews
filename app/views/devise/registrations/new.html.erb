<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Registrate</h3>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", id: "typeEmailX-2" %>
                <%= f.label :email, class: "form-label", for: "typeEmailX-2" %>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", id: "typePasswordX-2" %>
                <%= f.label :password, class: "form-label", for: "typePasswordX-2" %>
              </div>

              <!-- Password confirmation input -->
              <div class="form-outline mb-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", id: "typeRepeatPasswordX-2" %>
                <%= f.label :password_confirmation, class: "form-label", for: "typeRepeatPasswordX-2" %>
              </div>
              <button class="btn btn-primary btn-lg btn-block" type="submit">Sign up</button>

            <% end %>
            
            <%= render "devise/shared/links" %>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<%= render "devise/shared/links" %>
